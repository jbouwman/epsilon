{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "epsilon-nx",
  "sourceRoot": ".",
  "projectType": "library",
  "tags": ["scope:epsilon", "type:library"],
  "implicitDependencies": ["epsilon-json"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": ".",
        "command": "./epsilon --module epsilon.nx --eval t"
      },
      "inputs": ["{projectRoot}/**/*.lisp", "{projectRoot}/module.lisp"]
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "cwd": ".",
        "command": "./epsilon --test epsilon.nx"
      },
      "inputs": ["{projectRoot}/**/*.lisp"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": ".",
        "command": "echo 'Lint: epsilon.nx'"
      }
    }
  }
}
